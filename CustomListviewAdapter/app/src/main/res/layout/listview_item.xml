<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/listViewItemParent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="15dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/prodImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/prodTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@+id/prodImage"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/prodPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rs. 250/-"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/prodTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/prodDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="In publishing and graphic design, Lorem ipsum is a placeholder text commonly used to demonstrate the visual form of a document or a typeface without relying on meaningful content."
            android:textColor="@color/black"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@+id/prodPrice"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add to Cart"
            app:layout_constraintTop_toBottomOf="@id/prodDescription"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:paddingLeft="0dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>